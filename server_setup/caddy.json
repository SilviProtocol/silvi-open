{
    "admin": {
        "listen": "0.0.0.0:2019"
    },
    "logging": {
        "logs": {
            "default": {
                "level": "INFO",
                "encoder": {
                    "format": "console"
                }
            }
        }
    },
    "apps": {
        "http": {
            "servers": {
                "treekipedia": {
                    "listen": [
                        ":80",
                        ":443"
                    ],
                    "routes": [
                        {
                            "match": [
                                {
                                    "host": [
                                        "treekipedia-graph-flow.silvi.earth",
                                        "www.treekipedia-graph-flow.silvi.earth"
                                    ]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "subroute",
                                    "routes": [
                                        {
                                            "handle": [
                                                {
                                                    "handler": "reverse_proxy",
                                                    "upstreams": [
                                                        {
                                                            "dial": "167.172.143.162:80"
                                                        }
                                                    ],
                                                    "headers": {
                                                        "request": {
                                                            "set": {
                                                                "X-Forwarded-For": ["{http.request.remote.host}"],
                                                                "X-Forwarded-Proto": ["{http.request.scheme}"],
                                                                "X-Forwarded-Host": ["{http.request.host}"],
                                                                "X-Real-IP": ["{http.request.remote.host}"]
                                                            }
                                                        }
                                                    },
                                                    "health_checks": {
                                                        "passive": {
                                                            "fail_duration": "30s",
                                                            "max_fails": 3,
                                                            "unhealthy_connection_count": 3
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "terminal": true
                        }
                    ],
                    "automatic_https": {
                        "disable": false,
                        "disable_redirects": false
                    },
                    "logs": {
                        "default_logger_name": "treekipedia",
                        "logger_names": {
                            "treekipedia-graph-flow.silvi.earth": "treekipedia"
                        }
                    }
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": [
                            "treekipedia-graph-flow.silvi.earth",
                            "www.treekipedia-graph-flow.silvi.earth"
                        ],
                        "issuers": [
                            {
                                "module": "acme",
                                "email": "admin@silvi.earth"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
